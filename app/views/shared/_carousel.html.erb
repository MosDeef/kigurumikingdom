<section class="pt-2 pb-2">
    <div class="container">
      <div class="row">
        <div class="col-6">
          <h3 class="text-center mb-3"> Our Favourites </h3>
        </div>
        <div class="col-6 text-right">
          <a class="btn btn-ghost mb-3 mr-1" href="#carouselExampleIndicators2" role="button" data-slide="prev">
            <i class="fa fa-arrow-left"></i>
          </a>
          <a class="btn btn-ghost mb-3 " href="#carouselExampleIndicators2" role="button" data-slide="next">
            <i class="fa fa-arrow-right"></i>
          </a>
        </div>
        <div class="col-12">
          <div id="carouselExampleIndicators2" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
              <% @carousel_items.each_with_index do |mascots, index|  %>
                <div class="carousel-item <%= index == 0 ? "active" : "" %>">
                  <div class="row">
                    <% mascots.each do |mascot| %>
                      <div class="col-md-4 mb-3">
                        <div class="card">
                          <%= cl_image_tag mascot.photo.key, class:"img-fluid" %>
                          <div class="card-body">
                            <h4 class="card-title"> <%= mascot.name %></h4>
                          </div>
                        </div>
                      </div>
                    <% end  %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
