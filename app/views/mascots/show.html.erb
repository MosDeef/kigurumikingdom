<div class="container my-5" data-controller="total-price">
  <div class="row">
    <div class="col-6">
      <%= image_tag @mascot.photo, class: 'w-100' %>
    </div>
    <div class="col-6">
      <h1><%= @mascot.name %></h1>
      <div class="d-flex flex-row bd-highlight mb-3">
        <div class="fs-2 p-2 bd-highlight">Â¥<span data-total-price-target="price"><%= @mascot.price %></span>~</div>
        <div class="fs-2 p-2 bd-highlight"><i class="fa-solid fa-map-location-dot"></i>  Meet up location</div>
      </div>
      <div class="card-product-infos">
        <p><%= @mascot.description %></p>
      </div>
      <br>
      <br>
      <%= render 'bookings/form' %>
      <div class="row">
        <div class="col-15">
          <%= render 'reviews/form', review: @review %>
        </div>
      </div>
    </div>
  </div>
  <section>
    <div class="row text-center">
      <% @mascot.reviews.last(3).each do |review| %>
        <div class="col-md-4 mb-5 mb-md-0">
          <h5 class="mb-3"><%= review.user.nickname %></h5>
          <p class="px-xl-3">
            <i class="fas fa-quote-left pe-2"></i>
            <%=review.comment %>
          </p>
          <!-- Font Awesome needed -->
          <div class="d-flex justify-content-center">
            <% review.rating.to_i.times do %>
              <i class="fas fa-star text-info"></i>
            <% end %>
            <% (5 - review.rating).to_i.times do %>
              <i class="far fa-star"></i>
            <% end %>
          </div>
          <ul class="list-unstyled d-flex justify-content-center mb-0">
            <li>
            </li>
            <%# <li>
            <i class="fas fa-star fa-sm text-warning"></i>
          </li>
          <li>
            <i class="fas fa-star fa-sm text-warning"></i>
          </li>
          <li>
            <i class="fas fa-star fa-sm text-warning"></i>
          </li>
          <li>
            <i class="fas fa-star-half-alt fa-sm text-warning"></i>
          </li> %>
          </ul>
        </div>
      <% end %>
    </div>
  </section>
</div>
